<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>新規会員登録</h2>

      <%= form_with model: [:public,@customer], url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
  
      <div class="form-group">
        <%= f.label :first_name,'(姓)' %>
        <%= f.text_field :first_name, class: 'form-control', placeholder: "令和" %>
      </div>
  
      <div class="form-group">
        <%= f.label :last_name,'(名)' %>
       <%= f.text_field :last_name, class: 'form-control', placeholder: "道子" %>
      </div>
  
      <div class="form-group">
        <%= f.label :last_name_kana,'(セイ)' %>
        <%= f.text_field :last_name_kana, class: 'form-control', placeholder: "レイワ" %>
      </div>
  
      <div class="form-group">
        <%= f.label :first_name_kana,'(メイ)' %>
        <%= f.text_field :first_name_kana, class: 'form-control', placeholder: "ミチコ" %>
      </div>
  
      <div class="form-group">
        <%= f.label :email,'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "sample@example.com" %>
      </div>
  
      <div class="form-group">
        <%= f.label :postal_code,'郵便番号(ハイフンなし)' %>
        <%= f.text_field :postal_code, class: 'form-control', placeholder: "0000000" %>
      </div>
  
      <div class="form-group">
        <%= f.label :address,'住所' %>
        <%= f.text_field :address, class: 'form-control', placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
  
      <div class="form-group">
        <%= f.label :telephone_number,'電話番号(ハイフンなし)' %>
        <%= f.text_field :telephone_number, class: 'form-control', placeholder: "00000000000" %>
      </div>

      <div class="form-group">
        <%= f.label :password,'パスワード(6文字以上)' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation,'パスワード(確認用)' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
  
      <div class="actions">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
      
      <% end %>

      <p>すでに登録お済みの方
      <br><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>

    </div>
  </div>
</div>
