<div class="container">
  <div class="row ">
  <h2>商品一覧</h2>
  
  <%= render 'layouts/genre', genres: @genres %>
  
  <div class="col-9 justify-content-center">
    <% @items.reverse_each do |item| %> 
    <div>
      <%= link_to public_item_path(item) do %> 
        <%= image_tag item.image, size:"200x130" %>
      <% end %>
    </div>
    <div><%= item.name %></div>
    <div>￥<%= (item.price*1.1).floor.to_s(:delimited) %></div>
  </div>
  <% end %>
  </div>
  <div class="d-flex justify-content-center"><%= paginate @items %></div>
</div>
