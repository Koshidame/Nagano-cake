<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>注文情報入力</h2>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(item.errors.count, "error") %> prohibited this obj from being saved:</h3>
        <ul>
          <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: [:public,@order], local:true do |f| %>
    <div class="form-group">
      <h5>支払い方法</h5>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
      <br>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
    </div>
    <div class="form-group">
      <h5>お届け先</h5>
      <%= f.radio_button :address, :address_current_customer %>ご自身の住所<br>
      <%= f.label :address_current_customer, current_customer.address %>
      <br>
      <%= f.radio_button :address, :addresses %>登録住所から選択<br>
      <%= f.select :addresses, options_from_collection_for_select(Address.all, :id, :address_display), class: 'form-control' %>
      <br>
      <%= f.radio_button :address, :other_postal_code %>新しいお届け先<br>
      <%= f.label :"郵便番号（ハイフン無し）" %>
      <%= f.text_field :other_postal_code, class: 'form-control', placeholder: "0000000" %><br>
      <%= f.label :"住所" %>
      <%= f.text_field :other_address, class: 'form-control', placeholder: "東京都渋谷区代々木神園町0-0" %><br>
      <%= f.label :"宛名" %>
      <%= f.text_field :other_name, class: 'form-control', placeholder: "令和道子" %><br>
    </div>
    <div class="form-group">
      <%= f.submit "確認画面へ進む", class: 'btn btn-secondary' %>
    </div>
  <% end %>
  </div>
</div>