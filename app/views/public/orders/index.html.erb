<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h1>注文一覧</h1>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.address %></td>
            <td><%= order.name %></td>
            <td><%= order.total_payment %></td>
            <td><%= order.status %></td>
            <td>
              <%= link_to "表示する", public_order_path(order.id), class: 'btn btn-primary' %>
            </td>
          </tr>
        
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
