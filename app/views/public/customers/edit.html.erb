<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>会員情報編集</h2>
      <%= form_with model: [:public,@customer],url: public_customers_path, local:true do |f| %>
        <% if @customer.errors.any? %>
          <%= @customer.errors.count %>件のエラーが発生しました
        <% end %>
  
      <div class="form-group">
        <%= f.label :last_name,'(姓)' %>
        <%= f.text_field :last_name, class: 'form-control',placeholder: "令和" %>
        <% if @customer.errors.include?(:last_name) %>
          <p style="color: red;"><%= @customer.errors.full_messages_for(:last_name).first %>
        <% end %>
      </div>
  
      <div class="form-group">
        <%= f.label :first_name,'(名)' %>
        <%= f.text_field :first_name, class: 'form-control',placeholder: "道子" %>
        <% if @customer.errors.include?(:first_name) %>
          <p style="color: red;"><%= @customer.errors.full_messages_for(:first_name).first %>
        <% end %>
      </div>
  
      <div class="form-group">
        <%= f.label :last_name_kana,'(セイ)' %>
        <%= f.text_field :last_name_kana, class: 'form-control', placeholder: "レイワ" %>
        <% if @customer.errors.include?(:last_name_kana) %>
          <p style="color: red;"><%= @customer.errors.full_messages_for(:last_name_kana).first %>
        <% end %>
      </div>
  
      <div class="form-group">
        <%= f.label :first_name_kana,'(メイ)' %>
        <%= f.text_field :first_name_kana, class: 'form-control', placeholder: "ミチコ" %>
        <% if @customer.errors.include?(:first_name_kana) %>
          <p style="color: red;"><%= @customer.errors.full_messages_for(:first_name_kana).first %>
        <% end %>
      </div>
  
      <div class="form-group">
        <%= f.label :email,'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "sample@example.com" %>
        <% if @customer.errors.include?(:email) %>
          <p style="color: red;"><%= @customer.errors.full_messages_for(:email).first %>
        <% end %>
      </div>
  
      <div class="form-group">
        <%= f.label :postal_code,'郵便番号(ハイフンなし)' %>
        <%= f.text_field :postal_code, class: 'form-control', placeholder: "0000000" %>
        <% if @customer.errors.include?(:postal_code) %>
          <p style="color: red;"><%= @customer.errors.full_messages_for(:postal_code).first %>
        <% end %>
      </div>
  
      <div class="form-group">
        <%= f.label :address,'住所' %>
        <%= f.text_field :address, class: 'form-control', placeholder: "東京都渋谷区代々木神園町0-0" %>
        <% if @customer.errors.include?(:address) %>
          <p style="color: red;"><%= @customer.errors.full_messages_for(:address).first %>
        <% end %>
      </div>
  
      <div class="form-group">
        <%= f.label :telephone_number,'電話番号(ハイフンなし)' %>
        <%= f.text_field :telephone_number, class: 'form-control', placeholder: "00000000000" %>
        <% if @customer.errors.include?(:telephone_number) %>
          <p style="color: red;"><%= @customer.errors.full_messages_for(:telephone_number).first %>
        <% end %>
      </div>
      
      
      <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      <%= link_to "退会する", public_customers_unsubscribe_path, class: 'btn btn-danger' %>
      <% end %>
      
    </div>
  </div>
</div>
