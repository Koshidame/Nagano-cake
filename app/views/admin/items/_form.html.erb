<%= form_with model: [:admin,item], local:true do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(item.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :'商品画像' %>
    <%= f.file_field :image, class: "form-control-file item_image", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label :'商品名' %>
    <%= f.text_field :name, class: "form-control name" %>
  </div>
  <div class="form-group">
    <%= f.label :'商品説明' %>
    <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>
  <div class="form-group">
    <%= f.label :'ジャンル' %>
      <label><%= f.collection_select(:genre_id, genres, :id, :name) %></label>
  </div>
  <div class="form-group">
    <%= f.label :'税抜価格' %>
    <%= f.number_field :price, class: "form-control price" %>
  </div>
  <div class="form-group">
    <%= f.label :'販売ステータス' %>
    <%= f.radio_button :sales_status, true, class: "sales_status" %>販売中
    <%= f.radio_button :sales_status, false, class: "sales_status" %>販売停止中
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-secondary' %>
  </div>
<% end %>