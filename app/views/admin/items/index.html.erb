<div class='container'>
  <div class='row'>
      <h2 class="col-11">商品一覧</h2>
      <div class="float-end"><button type="button" class=" btn btn-warning rounded-circle p-0" style="width:2rem;height:2rem;"><%= link_to "＋",new_admin_item_path, class:"font-weight: 700" %></button></div>
      
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item), class: "item_#{item.id}" %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
                <%if item.sales_status == true %>
                  <td class="text-success">販売中</td>
                <% elsif %>
                  <td class="text-secondary">販売停止中</td>
                <% end %>
              </td>
            </tr>
          <% end %>
           </tbody>
      </table>
      </div>
      <div class="d-flex justify-content-center"><%= paginate @items %></div>
  </div>
</div>