
 
 <div class="container">
<h2 class="my-3 ml-3">注文履歴詳細</h2>
<dl class="row">
  <dt class="col-2">購入者</dt>
   <dd class="col-10"><%= @orders.customer.last_name %><%= @orders.customer.first_name %></dd>
  <dt class="col-2">注文日</dt>
   <dd class="col-10"><%= @orders.created_at %></dd>
  <dt class="col-2">配送先</dt>
   <dd class="col-10"><%= @orders.postal_code %><%= @orders.address %></dd>
  <dt class="col-2"></dt>
   <dd class="col-10"><%= @orders.name %></dd>
   <dt class="col-2">支払い方法</dt>
   <dd class="col-10"><%= @orders.payment_method %></dd>
  <dt class="col-2">注文ステータス</dt>
   <dd class="col-10"><%= @orders.status %></dd>
  
 </dl>

