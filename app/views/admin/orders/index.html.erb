<div class="container">
<h1 class="my-3 ml-3">会員一覧</h1>
<div class="row">
<div class="col-12">
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col" style="width: 10%">会員ID</th>
      <th scope="col" style="width: 30%">氏名</th>
      <th scope="col" style="width: 40%">メールアドレス</th>
      <th scope="col" style="width: 20%">ステータス</th>
    </tr>
  </thead>
  <% @customers.each do |c| %>
  <tbody>
    <tr>
      <td><%= c.id %></td>
      <td><%= link_to admin_customer_path(c.id) do %>
        <%= c.first_name %><% end %></td>
      <td><%= c.email %></td>
      <!--退会ステータス条件分岐-->
          <% if c.is_deleted == false %>
          <td class="text-success">有効</td>
          <% else %>
          <td class="text-secondary">退会</td>
          <% end %>
    
    </tr>
  </tbody>
  <% end %>
</table>
<div class="row justify-content-center"><%= paginate @customers %></div>
</div>
</div>
</div>
