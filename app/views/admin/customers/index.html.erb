<div class="container">
<h1 class="my-3 ml-3">注文履歴</h1>
<div class="row">
<div class="col-12">
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col" style="width: 30%">購入日時</th>
      <th scope="col" style="width: 20%">氏名</th>
      <th scope="col" style="width: 20%">注文個数</th>
      <th scope="col" style="width: 30%">注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |c| %>
  <tbody>
    <tr>
      <td><%= link_to admin_orders_path(c.id) do %>
        <%= c.created_at %><% end %></td>
      <td><%= c.name_at %></td>
      <td><%= c.amount %></td>
      <td><%= c.making_status %></td>
         
    
    </tr>
  </tbody>
  <% end %>
</table>
<div class="row justify-content-center"><%= paginate @customers %></div>
</div>
</div>
</div>
